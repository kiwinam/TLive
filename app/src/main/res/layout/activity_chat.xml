<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/chatTitleLo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/chatBackIv"
            android:src="@drawable/ic_down_black_24dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:padding="4dp"
            />
        <TextView
            android:id="@+id/chatTitleTv"
            android:text="박천명"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/chatRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/chatInputLo"
        android:layout_below="@id/chatTitleLo"
        />
    <RelativeLayout
        android:id="@+id/chatInputLo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:elevation="4dp"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/chatSendEt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:hint="메시지를 입력하세요"
            android:paddingStart="16dp"
            android:textSize="16sp"
            android:inputType="text"
            android:maxLines="1"
            android:maxWidth="320dp"
            />
        <Button
            android:id="@+id/chatSendBtn"
            android:layout_alignParentEnd="true"
            android:text="보내기"
            android:textColor="@color/colorPrimary"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
    </RelativeLayout>
</RelativeLayout>