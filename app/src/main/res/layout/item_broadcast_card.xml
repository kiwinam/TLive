<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:layout_marginTop="12dp"
    android:elevation="2dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/broadPreviewIv"
            android:layout_width="match_parent"
            android:layout_height="210dp" />
        <TextView
            android:id="@+id/broadLiveTv"
            android:text="라이브"
            android:textColor="#eac60000"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:padding="4dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:background="@drawable/sp_live_rect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/broadVodTv"
            android:text="VOD"
            android:textColor="@color/colorGray"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:padding="4dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:background="@drawable/sp_vod_rect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <RelativeLayout
            android:id="@+id/broadInfoLo"
            android:layout_below="@id/broadPreviewIv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimaryDeepDark"
            >
            <ImageView
                android:id="@+id/broadHostIv"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                />
            <TextView
                android:id="@+id/broadHostNameTv"
                android:text="박천명"
                android:textStyle="bold"
                android:textColor="@color/colorTextWhite"
                android:layout_toEndOf="@id/broadHostIv"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/broadRoomNameTv"
                android:text="골목식당 맛집 가즈아"
                android:textSize="14sp"
                android:textColor="@color/colorTextWhite"
                android:layout_toEndOf="@id/broadHostIv"
                android:layout_below="@id/broadHostNameTv"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/broadRoomTagTv"
                android:text="#맛집 #골목식당 #삼겹살 #저녁"
                android:textSize="12sp"
                android:textColor="#d2ffffff"
                android:layout_toEndOf="@id/broadHostIv"
                android:layout_below="@id/broadRoomNameTv"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/broadMoreInfoIv"
                android:src="@drawable/ic_more_white_24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:focusable="true"
                android:clickable="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/broadInfoLo"
            android:layout_marginBottom="4dp"
            >
            <ImageView
                android:id="@+id/broadLikeIv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_favorite_border_orange_24dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                />
            <ImageView
                android:id="@+id/broadSubscriptIv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_subscriptions_gray_24dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>