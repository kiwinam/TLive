<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/broadCardView"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:layout_marginTop="12dp"
    android:elevation="6dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/broadPreviewIv"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="#89545454"
            android:scaleType="centerCrop"
            android:contentDescription="@string/preview" />
        <View
            android:layout_alignBottom="@id/broadPreviewIv"
            android:layout_width="match_parent"
            android:background="@drawable/sp_broadchat_rv_gradient"
            android:layout_height="60dp"/>
        <TextView
            android:id="@+id/broadLiveTv"
            android:text="@string/live_ko"
            android:textColor="#fff"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:padding="4dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:background="@drawable/sp_live_rect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/broadVodTv"
            android:text="@string/vod"
            android:textColor="#fff"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:padding="4dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:background="@drawable/sp_vod_rect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            />
        <View
            android:id="@+id/broadLiveCircle"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/sp_red_circle"
            android:layout_above="@id/broadInfoLo"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="16dp"
            />
        <TextView
            android:id="@+id/broadLiveNumTv"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/broadInfoLo"
            android:layout_toEndOf="@id/broadLiveCircle"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="12dp"/>
        <RelativeLayout
            android:id="@+id/broadInfoLo"
            android:layout_below="@id/broadPreviewIv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#c2720a"
            >
            <ImageView
                android:id="@+id/broadHostIv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/profile" />
            <TextView
                android:id="@+id/broadHostNameTv"
                android:textStyle="bold"
                android:textColor="@color/colorTextWhite"
                android:layout_toEndOf="@id/broadHostIv"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="RelativeOverlap" />
            <TextView
                android:id="@+id/broadRoomNameTv"
                android:textSize="14sp"
                android:textColor="@color/colorTextWhite"
                android:layout_toEndOf="@id/broadHostIv"
                android:layout_below="@id/broadHostNameTv"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/broadRoomTagTv"
                android:textSize="12sp"
                android:textColor="#d2ffffff"
                android:layout_toEndOf="@id/broadHostIv"
                android:layout_below="@id/broadRoomNameTv"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/broadMoreInfoIv"
                android:src="@drawable/ic_more_white_24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:focusable="true"
                android:clickable="true"
                android:contentDescription="@string/show_more_ko" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/broadInfoLo"
            android:layout_marginBottom="4dp"
            >
            <ImageView
                android:id="@+id/broadLikeIv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_favorite_border_gray"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/like_ko" />
            <TextView
                android:id="@+id/broadLikeNumTv"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="@string/_0"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/broadSubscriptIv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_subscriptions_gray_24dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/subscribe_ko" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>