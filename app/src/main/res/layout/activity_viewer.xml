<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="1dp"
    android:background="#000"
    >
    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/vGLSurfaceViewCall"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:elevation="2dp"/>
    <LinearLayout
        android:id="@+id/viewerPortLo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp"
        android:orientation="vertical"
        android:layout_below="@id/vGLSurfaceViewCall"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:elevation="8dp"
            android:background="#fff"
            >
            <View
                android:layout_centerVertical="true"
                android:background="@drawable/sp_red_circle"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="16dp"
                />
            <TextView
                android:layout_centerVertical="true"
                android:text="생방송 채팅"
                android:textStyle="bold"
                android:layout_marginStart="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/viewerPortChatRv"
            android:background="#cef5f5f5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:elevation="3dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            />
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:background="#fff"
            android:elevation="8dp"
            >
            <EditText
                android:id="@+id/viewerPortChatEt"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/viewerPortChatSendBtn"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:text="보내기"
                android:textColor="@color/colorGray"
                />
        </LinearLayout>
    </LinearLayout>
    <!--<LinearLayout
        android:id="@+id/viewerLandLo"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:elevation="2dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/viewerLandChatRv"
            android:background="@drawable/sp_broadchat_rv_gradient"
