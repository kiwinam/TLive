<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#abe6e6e6"
    >
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/profileInfoLo"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="#000"
                android:elevation="2dp"
                >
                <ImageView
                    android:id="@+id/profileIv"
                    android:src="@drawable/ic_profile_ex1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    />
                <ImageButton
                    android:id="@+id/profileSettingIb"
                    android:src="@drawable/ic_settings_white_24dp"
                    android:background="@null"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />
                <TextView
                    android:id="@+id/profileNameTv"
                    android:text="박천명"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/profileIv"
                    android:layout_marginTop="8dp"
                    />
                <LinearLayout
                    android:id="@+id/profileDetailLo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profileNameTv"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="16dp"
                        >
                        <TextView
                            android:text="팔로워"
                            android:textSize="14sp"
                            android:textColor="@color/colorTextWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/profileFollowNumTv"
                            android:text="0"
                            android:textSize="14sp"
                            android:textColor="@color/colorTextWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:text="시청자"
                            android:textSize="14sp"
                            android:textColor="@color/colorTextWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/profileViewerNumTv"
                            android:text="0"
                            android:textSize="14sp"
                            android:textColor="@color/colorTextWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:elevation="2dp"
                android:background="#fff"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                >
                <Button
                    android:id="@+id/profileMovieBtn"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:text="동영상"
                    />
                <Button
                    android:id="@+id/profileClipBtn"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:text="클립"
                    />
                <Button
                    android:id="@+id/profileLikeBtn"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:text="좋아요"
                    />
                <Button
                    android:id="@+id/profileChatBtn"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:text="채팅방"
                    />
            </LinearLayout>
            <FrameLayout
                android:id="@+id/profileContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>