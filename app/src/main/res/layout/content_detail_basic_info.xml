<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#fff"
    >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/detailPhotoRv"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        >
        <TextView
            android:id="@+id/detailNameTv"
            android:text="로리스더프라임립"
            android:textSize="18sp"
            android:textColor="#d6000000"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/detailViewerIv"
            android:src="@drawable/ic_visibility_gray_24dp"
            android:layout_below="@id/detailNameTv"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_width="18dp"
            android:layout_height="14dp" />
        <TextView
            android:id="@+id/detailViewerTv"
            android:text="12345"
            android:textSize="10sp"
            android:layout_marginTop="4.5dp"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@id/detailViewerIv"
            android:layout_below="@id/detailNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="SmallSp" />
        <ImageView
            android:id="@+id/detailStarIv"
            android:src="@drawable/ic_star_gray_24dp"
            android:layout_below="@id/detailNameTv"
            android:layout_toEndOf="@id/detailViewerTv"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_width="18dp"
            android:layout_height="14dp" />
        <TextView
            android:id="@+id/detailStarTv"
            android:text="0"
            android:textSize="10sp"
            android:layout_marginTop="4.5dp"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@id/detailStarIv"
            android:layout_below="@id/detailNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="SmallSp" />
        <ImageView
            android:id="@+id/detailReviewIv"
            android:src="@drawable/ic_edit_gray_24dp"
            android:layout_below="@id/detailNameTv"
            android:layout_toEndOf="@id/detailStarTv"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_width="18dp"
            android:layout_height="14dp" />
        <TextView
            android:id="@+id/detailReviewTv"
            android:text="0"
            android:textSize="10sp"
            android:layout_marginTop="4.5dp"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@id/detailReviewIv"
            android:layout_below="@id/detailNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="SmallSp" />
        <TextView
            android:id="@+id/detailStarScoreTv"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:text="4.5"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#717b7b7b"
        android:layout_width="match_parent"
        android:layout_height="0.75dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/detailWantToGoLo"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/detailWantToGoIv"
                android:src="@drawable/ic_star_orange_line_24dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:layout_marginTop="4dp"
                android:text="@string/want_to_go_ko"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/detailWriteReviewLo"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:src="@drawable/ic_edit_line_orange_24dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:layout_marginTop="4dp"
                android:text="리뷰쓰기"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/detailUploadPhotoLo"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:src="@drawable/ic_camera_line_orange"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:layout_marginTop="4dp"
                android:text="사진올리기"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="#717b7b7b"
        android:layout_width="match_parent"
        android:layout_height="0.75dp"/>
    <TextView
        android:text="@string/review_request_ko"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingTop="8dp"
        android:layout_marginBottom="8dp"
        >
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/detailGoodReviewLo"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:src="@drawable/ic_emotion_good"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="@string/tasty_good_ko" />
            <TextView
                android:text="@string/tasty_good_ko"
                android:textSize="10sp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SmallSp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/detailNormalReviewLo"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:src="@drawable/ic_emotion_normal"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="@string/tasty_normal_ko" />
            <TextView
                android:text="@string/tasty_normal_ko"
                android:textSize="10sp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SmallSp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/detailBadReviewLo"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:src="@drawable/ic_emotion_bad"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="@string/tasty_bad_ko" />
            <TextView
                android:text="@string/tasty_bad_ko"
                android:textSize="10sp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SmallSp" />
        </LinearLayout>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>